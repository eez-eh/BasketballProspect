<aura:component implements="force:lightningQuickAction,lightning:actionOverride" controller="page_RefreshProspectsController" access="global">
    <div role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open">
    	<div class="slds-modal__container">
            <div class="slds-modal__header">
            	<h2 class="slds-text-heading_medium">Refresh Potential Prospects list</h2>
            </div>
            <div class="slds-modal__content slds-p-around_medium">
            	Do you want to refresh the Potential Prospects records? 
            </div>
            <div class="slds-modal__footer">
            	<lightning:button variant="neutral" label="Cancel" onclick="{!c.cancelDialog}"/>
            	<lightning:button variant="brand" label="Confirm" onclick="{!c.refreshProspects}"/>
        	</div>
        </div>        
    </div>
	<div class="slds-backdrop slds-backdrop_open"></div>    
</aura:component>